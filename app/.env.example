# ===================================
# BusinessCopilot - Environment Variables
# ===================================
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to version control

# ===================================
# Supabase Configuration
# ===================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ===================================
# OpenAI Configuration
# ===================================
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_FAST_MODEL=gpt-3.5-turbo-0125
OPENAI_DEEP_MODEL=gpt-4o-128k
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_TIMEOUT_MS=60000

# ===================================
# Perplexity Configuration
# ===================================
PERPLEXITY_API_KEY=pplx-your-perplexity-api-key-here
PERPLEXITY_DEFAULT_MODEL=sonar-reasoning-pro
PERPLEXITY_RESEARCH_MODEL=sonar-deep-research
PERPLEXITY_BASE_URL=https://api.perplexity.ai
PERPLEXITY_TIMEOUT_MS=30000

# ===================================
# Stripe Configuration
# ===================================
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key-here
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key-here
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret-here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key-here

# ===================================
# Application Configuration
# ===================================
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-here
NODE_ENV=development

# ===================================
# Optional: Analytics & Monitoring
# ===================================
# GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
# POSTHOG_KEY=phc_your-posthog-key-here
# SENTRY_DSN=https://your-sentry-dsn-here
